  number = {6},
  journal = {Ecological Applications},
  doi = {10.1890/1051-0761(2000)010[1792:SOEFFA]2.0.CO;2},
  author = {McClanahan, T. R. and Mangi, S.},
  month = dec,
  year = {2000},
  keywords = {dispersal,Marine protected areas,Coral reefs,Adaptive management,Acanthuridae,emigration rates,integrated coastal area management,Lethrinidae,marine fisheries reserves,Siganidae,tropical fisheries},
